@model IEnumerable<Oracle.Net.Models.Upload>
@{
    ViewData["Title"] = "下载中心";
}

<div class="container">

    <!--核心内容展示区-->
    <div class="course-type">
        <div>
            <h1>下载内容</h1>
        </div>
        <div class="course-card-weike" >
            @foreach (var item in Model)
            {
                <div class="course-card course-card-4">
                    <div>
                        <a asp-action="Download1" asp-route-id="@item.Id" ><img src="~/img/download.jpg" alt=""></a>
                    </div>
                    <div class="course-title">
                        <h2>@item.Name</h2>

                    </div>
                    <div class="course-price-info">
                        <div>文件大小：@item.Size</div>
                        @*<span class="price-color">下载 | <a href="~/home/download1" class="price-color">详细</a></span>*@
                    </div>
                </div>

            }


        </div>
    </div>
</div>



