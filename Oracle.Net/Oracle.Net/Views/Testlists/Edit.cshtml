@model Oracle.Net.Models.Testlist

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="news-detail">
        <a href="~/testlists/index" style="float:right;">返回</a>
        <h1><strong>测试管理</strong></h1>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <span>场景序号：</span>
                        <input asp-for="Scene" class="form-control" />
                        <span asp-validation-for="Scene" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span>测试名称：</span>
                        <input asp-for="Testname" class="form-control" />
                        <span asp-validation-for="Testname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Class" class="form-control" type="hidden" />
                        <span asp-validation-for="Class" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span>试卷详情：</span>
                        <input asp-for="Info" class="form-control" />
                        <span asp-validation-for="Info" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="保存" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>

