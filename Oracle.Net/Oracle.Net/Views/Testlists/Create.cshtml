@model Oracle.Net.Models.Testlist

@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="news-detail">
        <a href="~/Testlists/index"style="float:right;">返回</a>
        <h1><strong>新建测试</strong></h1>
        <div>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <span>场景序号：</span>
                            <input asp-for="Scene" class="form-control" />
                            <span asp-validation-for="Scene" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <span>测试名称：</span>
                            <input asp-for="Testname" class="form-control" />
                            <span asp-validation-for="Testname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Class" class="form-control" value="@ViewBag.Class" type="hidden" />
                            <span asp-validation-for="Class" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span>试卷详情：</span>
                            <input asp-for="Info" class="form-control" />
                            <span asp-validation-for="Info" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="新建" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>


