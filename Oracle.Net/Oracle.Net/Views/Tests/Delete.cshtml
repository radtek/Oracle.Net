@model Oracle.Net.Models.Test

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="news-detail">
        <a href="~/tests/index" style="float:right;">返回</a>
        <h1><strong>删除试题</strong></h1>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    测试ID
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Testid)
                </dd>
                <dt>
                    问题
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Question)
                </dd>
                <dt>
                    问题详情
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Info)
                </dd>
                <dt>
                    A
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Op1)
                </dd>
                <dt>
                    B
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Op2)
                </dd>
                <dt>
                    C
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Op3)
                </dd>
                <dt>
                    D
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Op4)
                </dd>
                <dt>
                    正确选项
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Answ)
                </dd>
                <dt>
                    分值
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Mark)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="删除" class="btn btn-default" />
            </form>
        </div>
        </div>
</div>