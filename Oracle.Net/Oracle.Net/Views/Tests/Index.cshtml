@model IEnumerable<Oracle.Net.Models.Test>

@{
    ViewData["Title"] = "Index";
}

<div class="container" style="width:1380px">
    <div class="news-detail">
        <a href="~/testlists/index" style="float:right;">返回</a>
        <h1><strong>试题管理</strong></h1>
        <div>
            <p>
                <a asp-action="Create" style="font-size: 20px;color: #666;">新建试题</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            测试ID
                        </th>
                        <th>
                            问题
                        </th>
                        <th>
                            问题详情
                        </th>
                        <th>
                            A
                        </th>
                        <th>
                            B
                        </th>
                        <th>
                            C
                        </th>
                        <th>
                            D
                        </th>
                        <th>
                           正确选项
                        </th>
                        <th>
                           分值
                        </th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Testid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Question)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Info)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Op1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Op2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Op3)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Op4)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Answ)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mark)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">编辑</a>           
                                <a asp-action="Delete" asp-route-id="@item.Id">删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
</div>
