@model Oracle.Net.Models.Upload

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="news-detail">
        <a href="~/uploads/index" style="float:right;">返回</a>
        <h1><strong>下载管理</strong></h1>
        <div class="row">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            名称
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            详情
                            <input asp-for="Info" class="form-control" />
                            <span asp-validation-for="Info" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Path" class="form-control" type="hidden" />
                            <span asp-validation-for="Path" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Size" class="form-control" type="hidden" />
                            <span asp-validation-for="Size" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Class" class="form-control" type="hidden" />
                            <span asp-validation-for="Class" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="保存" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>
            </div>
</div>
</div>