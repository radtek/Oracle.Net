@model Oracle.Net.Models.User
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "登录系统";
}
<!--首页导航区========================================-->
<div class="container">
    <a class="nav-item" href=""><img src="/img/xsylogo.png" width="200" style="margin-top: 20px" /></a>
    <form method="post" action="/Auth/Findpwd">
        <div class="xsy-login shadow02">
            <h1><strong>找回密码</strong></h1>
            <div>
                <span>请输入学号：</span>
                <input type="text" name="Id" />
            </div>
            <div>
                <span>请输入手机号：</span>
                <input type="text" name="Phonenumber" />
            </div>
            <div>
                <br />
                <input type="submit" value="找回密码" />
                <br />
                <a href="~/auth/login">返回登录</a>
            </div>
        </div>
    </form>
</div>
